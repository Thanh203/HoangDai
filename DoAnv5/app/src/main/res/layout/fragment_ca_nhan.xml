<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CaNhanFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvYeuThich"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Món ăn yêu thích"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="8dp"
                android:layout_marginVertical="16dp"
                android:drawableStart="@drawable/baseline_favorite_30_red"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:drawablePadding="8dp"/>
            <TextView
                android:id="@+id/tvLichSu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Món ăn đã xem"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginVertical="16dp"
                android:drawableStart="@drawable/baseline_access_time_filled_30_yelllow"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:drawablePadding="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tùy chỉnh"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="8dp"
                android:layout_marginVertical="16dp"
                android:drawableStart="@drawable/baseline_settings_30_green"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:drawablePadding="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Thông tin ứng dụng"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginVertical="16dp"
                android:drawableStart="@drawable/baseline_info_30_pink"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:drawablePadding="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>